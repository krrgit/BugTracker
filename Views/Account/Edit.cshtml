@using BugTracker.Data.Enum
@using BugTracker.ViewModels
@model EditAccountViewModel

@{
	ViewData["Title"] = "Edit Account";
}
<div class="row d-flex justify-content-center">
	<div class="col-md-8">
		<h2>Edit Account</h2>

		<form method="post" asp-action="Edit" enctype="multipart/form-data">
			<input type="hidden" value="Id" id="Id" />
			<div class="row mb-2">
				<div class="form-group col-md-6 py-2">
					<label asp-for="FirstName" class="control-label"></label>
					<input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6 py-2">
					<label asp-for="LastName" class="control-label"></label>
					<input asp-for="LastName" class="form-control" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group py-2">
				<label asp-for="EmailAddress" class="control-label"></label>
				<input asp-for="EmailAddress" class="form-control" />
				<span asp-validation-for="EmailAddress" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary gap-2">Save Changes</button>
			<a class="btn btn-outline-danger gap-2" asp-controller="Dashboard" asp-action="Index">Cancel</a>
		</form>



	</div>
</div>
