@using BugTracker.ViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-5 flex-column">
        <div class="card">
          <div class="card-body">
                <div class="row justify-content-md-center">
                    <!-- Title-->
                    <div class="col-11">
                        <h4>Log In</h4>
                    </div>
                    @if (TempData["Error"] != null)
                    {
                                <div class="col-md-12 alert alert-danger">
                                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                                </div>
                    }
                    <!-- Form -->
                    <div class="col-11">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group py-2">
                                <label asp-for="EmailAddress" class="control-label"></label>
                                <input asp-for="EmailAddress" class="form-control">
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group py-2">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group py-2">
                                <input class="btn btn-success my-0" type="submit" value="Log In" style="width:100%;"/>
                            </div>
                        </form>
                    </div>
                    <!-- Register / Demo-->
                    <div class="col-11">
                        <hr/>
                        <a type="button" class="btn btn-danger my-2" style="width:100%;" asp-controller="Account" asp-action="Register">Sign Up</a>
                        <hr />

                        <div class="row px-2 pt-2">
                            <div class="col px-1 ">
                            <form asp-action="Login">
                                    <input asp-for="EmailAddress" class="form-control" type="hidden" value="admin@demo.com">
                                <input asp-for="Password" class="form-control" type="hidden" value="Coding@1234?">
                                <input class="btn btn-secondary mb-2" style="width:100%;" type="submit" value="Demo Admin">
                            </form>
                            </div>
                            <div class="col px-1">
                            <form asp-action="Login">
                                    <input asp-for="EmailAddress" class="form-control" type="hidden" value="manager@demo.com">
                                <input asp-for="Password" class="form-control" type="hidden" value="Coding@1234?">
                                <input class="btn btn-secondary mb-2" style="width:100%;" type="submit" value="Demo Manager">
                            </form>
                            </div>
                        </div>
                        <div class="row px-2">
                            <div class="col px-1">
                            <form asp-action="Login">
                                    <input asp-for="EmailAddress" class="form-control" type="hidden" value="developer@demo.com">
                                <input asp-for="Password" class="form-control" type="hidden" value="Coding@1234?">
                                <input class="btn btn-secondary mb-2" style="width:100%;" type="submit" value="Demo Developer">
                            </form>
                            </div>
                            <div class="col px-1">
                            <form asp-action="Login">
                                    <input asp-for="EmailAddress" class="form-control" type="hidden" value="submitter@demo.com">
                                <input asp-for="Password" class="form-control" type="hidden" value="Coding@1234?">
                                <input class="btn btn-secondary mb-2" style="width:100%;" type="submit" value="Demo Submitter">
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
